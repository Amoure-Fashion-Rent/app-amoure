    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/navy_blue_700</item>
        <item name="colorPrimaryDark">@color/navy_blue_700</item>
        <item name="colorAccent">@color/navy_blue_700</item>
    </style>

    <style name="Widget.App.Button.Size" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/navy_blue_700</item>
        <item name="android:backgroundTint">@color/white</item>
