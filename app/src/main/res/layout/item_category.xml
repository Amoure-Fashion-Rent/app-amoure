<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_product_small"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingHorizontal="5dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_product"
        android:layout_width="175dp"
        android:layout_height="200dp"
        android:background="@color/gray_blue_200"
        android:scaleType="centerCrop"
        android:foregroundGravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedSquare" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/lorem_ipsum"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="start|bottom"
        android:shadowColor="@color/navy_blue_700"
        android:shadowDx="-1"
        android:shadowDy="-1"
        android:shadowRadius="10"
        app:layout_constraintBottom_toBottomOf="@id/iv_product"
        app:layout_constraintStart_toStartOf="@id/iv_product"
        app:layout_constraintEnd_toEndOf="@id/iv_product"
        tools:text="@string/lorem_ipsum" />

</androidx.constraintlayout.widget.ConstraintLayout>
